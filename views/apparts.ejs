  <head>
    <title>
      Node Js MySQL Fetch and Show Records from MySQL Database Example
    </title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/32279df397.js"
      crossorigin="anonymous"
    ></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"
          ><i class="fa-solid fa-house-flag"></i
        ></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#mynavbar"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mynavbar">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/apparts">Appartements</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/update">Mettre à jour</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="javascript:void(0)"
                data-bs-toggle="offcanvas"
                data-bs-target="#demo"
                >Filtres</a
              >
            </li>
          </ul>
          <form class="d-flex">
            <input
              class="form-control me-2"
              type="text"
              placeholder="Chercher"
              id="search"
            />
            <button class="btn btn-primary" type="button">
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Filtres -->
    <div class="offcanvas offcanvas-start text-bg-dark" id="demo">
      <div class="offcanvas-header">
        <h1 class="offcanvas-title">Filtres</h1>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="offcanvas"
        ></button>
      </div>
      <div class="offcanvas-body">

        <form action="/update" method="get">
          <input type="text" name="dep" id="dep" placeholder="Département"><br>
          <input type="text" name="city" id="city" placeholder="Ville"><br>
          <input type="text" name="bedrooms" id="bedrooms" placeholder="Chambres"><br>
          <input type="text" name="rooms" id="rooms" placeholder="Pièces"><br>
          <input type="text" name="livingArea" id="livingArea" placeholder="Surface"><br>
          <input type="text" name="priceMin" id="priceMin" placeholder="Prix min"><br>
          <input type="text" name="priceMax" id="priceMax" placeholder="Prix max"><br>
          <br>
          <button class="btn btn-secondary" type="submit">Appliquer</button>
        </form>
      </div>
    </div>

    <!-- Annonces -->
    <div class="container mt-4">
      <% if (messages.success) { %>
      <p class="alert alert-success mt-4"><%- messages.success %></p>
      <% } %>
      <br />

      <h1>Appartements</h1>

      <% if(data.length){ for(var i = 0; i< data.length; i++) {%>
      <div class="container p-5 my-5 border">
        <div class="row">
          <div class="col-6">
            <h2><%= data[i].title %></h2>
            <p><i class="fa-solid fa-location-dot"></i> <%= data[i].city %></p>
            <p>
              <i class="fa-solid fa-bed"></i> <%= data[i].bedrooms %> chambres
            </p>
            <p>
              <i class="fa-solid fa-door-open"></i> <%= data[i].rooms %> pièces
            </p>
            <p>
              <i class="fa-solid fa-layer-group"></i> <%= data[i].livingArea %>
              m²
            </p>
            <p><i class="fa-solid fa-tag"></i> <%= data[i].price %> €</p>
            <!-- <p>
              <i class="fa-solid fa-link"></i>
              <a href="<%= data[i].permalink %>">Link</a>
            </p> -->
            <button
              type="button"
              class="btn btn-primary"
              onclick="location.href='<%= data[i].permalink %>'"
            >
              Accéder à l'annonce
            </button>
          </div>
          <div class="col-6">
            <img src="<%= data[i].photos %>" style="max-width: 30vw" />
          </div>
        </div>
      </div>
      <% } }else{ %>
      <p>No data ever existed.</p>
      <% } %>

